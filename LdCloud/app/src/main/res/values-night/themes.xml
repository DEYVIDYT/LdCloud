        <!-- <item name="colorTertiaryContainer">@color/md_theme_dark_tertiaryContainer</item> -->
        <!-- <item name="colorOnTertiaryContainer">@color/md_theme_dark_onTertiaryContainer</item> -->

        <!-- Error, Background, Surface colors are often kept for more control -->
        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorOnError">@color/md_theme_dark_onError</item>
        <item name="colorErrorContainer">@color/md_theme_dark_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_dark_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_dark_background</item>
        <item name="colorOnBackground">@color/md_theme_dark_onBackground</item>
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_dark_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_dark_outline</item>
        <item name="colorInverseSurface">@color/md_theme_dark_inverseSurface</item>
        <item name="colorInverseOnSurface">@color/md_theme_dark_inverseOnSurface</item>
        <item name="colorInversePrimary">@color/md_theme_dark_inversePrimary</item>
        <item name="colorSurfaceTint">@color/md_theme_dark_surfaceTint</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/md_theme_dark_primary</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/md_theme_dark_surfaceVariant</item>

        <!-- Component Styles (can inherit from light or define separately if needed) -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <!-- Component specific styles for dark theme if they need to differ beyond base theme colors -->
    <!-- For example, if BottomNavigationView needs different icon/text tint logic in dark mode -->
     <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">?attr/colorSurface</item> <!-- Use dynamic surface -->
        <item name="itemIconTint">@color/bnv_tab_item_foreground_dynamic</item> <!-- Use dynamic CSL -->
        <item name="itemTextColor">@color/bnv_tab_item_foreground_dynamic</item> <!-- Use dynamic CSL -->
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <!-- tint should be handled by the parent M3 style using ?attr/colorOnPrimaryContainer or similar -->
        <!-- <item name="tint">?attr/colorOnPrimary</item> -->
    </style>

</resources>
