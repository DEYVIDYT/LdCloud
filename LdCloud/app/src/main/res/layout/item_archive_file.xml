<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/image_view_file_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_help" /> <!-- Placeholder icon -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/text_view_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File Name"
            style="?android:attr/textAppearanceListItem"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_view_file_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size | Date"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/button_download_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/stat_sys_download"
        android:contentDescription="Download File"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"/>

</LinearLayout>
