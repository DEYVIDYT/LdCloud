<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_view_folder_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Ações para a Pasta"
        android:textAppearance="?attr/textAppearanceTitleMedium" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_rename_folder"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Renomear Pasta"
        app:icon="@drawable/ic_edit_vd" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_delete_folder"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Excluir Pasta"
        app:icon="@drawable/ic_delete_vd"
        android:textColor="?attr/colorError"
        app:iconTint="?attr/colorError"
        app:strokeColor="?attr/colorError" />

</LinearLayout>
